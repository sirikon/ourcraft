[Unit]
Description=Ourcraft
After=network.target

[Service]
Type=forking
User=${USER}
Group=${GROUP}

WorkingDirectory=${WORKDIR}
Environment=PATH=/usr/local/sbin:/usr/local/bin:/usr/sbin:/usr/bin:/sbin:/bin
ExecStart=/usr/bin/screen -L -dmS ourcraft  ourcraft start

Restart=on-failure
RestartSec=3

KillSignal=SIGINT
TimeoutStopSec=60

[Install]
WantedBy=multi-user.target
